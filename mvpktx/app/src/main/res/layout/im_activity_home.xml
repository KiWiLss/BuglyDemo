<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <FrameLayout
            android:id="@+id/fl_im_home_fg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_im_home_bottom"
    android:layout_below="@+id/tv_im_home_title">

    </FrameLayout>

    <TextView
            android:id="@+id/tv_im_home_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m40"
            android:background="@color/green"
            android:text="会话"
            android:textSize="@dimen/m14"
            android:textColor="@color/black2D"
            android:gravity="center"/>

    <LinearLayout
            android:id="@+id/ll_im_home_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m45"
            android:layout_alignParentBottom="true">


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

            <TextView
                    android:id="@+id/tv_im_home_hh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会话"
                    android:textSize="@dimen/m14"
                    android:textColor="@color/tv_select_green_gray"
            />


        </LinearLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

            <TextView
                    android:id="@+id/tv_im_home_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通讯录"
                    android:textSize="@dimen/m14"
                    android:textColor="@color/tv_select_green_gray"
            />
        </LinearLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

            <TextView
                    android:id="@+id/tv_im_home_my"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textSize="@dimen/m14"
                    android:textColor="@color/tv_select_green_gray"
            />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>