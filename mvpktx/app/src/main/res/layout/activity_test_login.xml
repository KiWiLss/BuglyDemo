<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white">

    <include layout="@layout/currency_top"/>

    <!--<View android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/m0.5"-->
    <!--android:background="@drawable/gray_radius"/>-->

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/m60"
            android:layout_height="@dimen/m60"
            android:src="@drawable/image_lena"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/m18"/>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m40"
            android:background="@drawable/bg_gray_arc"
            android:layout_marginLeft="@dimen/m14"
            android:layout_marginRight="@dimen/m14"
            android:layout_marginTop="@dimen/m33">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="手机号"
                  android:textSize="@dimen/m14"
                  android:textColor="@color/black2D"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="@dimen/m15"
        />

        <EditText
                android:id="@+id/et_login_phone"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:textSize="@dimen/m14"
                android:layout_marginLeft="@dimen/m70"
                android:textColorHint="@color/gray94"
                android:textColor="@color/black2D"
                android:layout_centerVertical="true"
                android:background="@null"
        />

    </RelativeLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m40"
            android:background="@drawable/bg_gray_arc"
            android:layout_marginLeft="@dimen/m14"
            android:layout_marginRight="@dimen/m14"
            android:layout_marginTop="@dimen/m13">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="密码"
                  android:textSize="@dimen/m14"
                  android:textColor="@color/black2D"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="@dimen/m15"
        />

        <EditText
                android:id="@+id/et_login_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:textSize="@dimen/m14"
                android:layout_marginLeft="@dimen/m70"
                android:textColorHint="@color/gray94"
                android:textColor="@color/black2D"
                android:layout_centerVertical="true"
                android:background="@null"
                android:inputType="textPassword"
        />


    </RelativeLayout>

    <TextView
            android:id="@+id/tv_login_forget"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="忘记密码"
              android:textSize="@dimen/m12"
              android:textColor="#FF7547"
              android:layout_gravity="end"
              android:layout_marginRight="@dimen/m29"
              android:layout_marginTop="@dimen/m12"/>


    <com.coorchice.library.SuperTextView
            android:id="@+id/stv_login_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m40"
            android:layout_marginLeft="@dimen/m14"
            android:layout_marginRight="@dimen/m14"
            app:shaderStartColor="#FF4949"
            app:shaderEndColor="#FF7C4D"
            app:shaderMode="leftToRight"
            app:shaderEnable="true"
            android:text="登录"
            android:textSize="@dimen/m14"
            android:textColor="@color/white"
            android:gravity="center"
            app:corner="@dimen/m20"
            android:layout_marginTop="@dimen/m15"
    />

    <com.coorchice.library.SuperTextView
            android:id="@+id/stv_login_register"
            android:layout_width="match_parent" android:layout_height="@dimen/m40"
    android:text="去注册"
    android:textSize="@dimen/m14"
    android:textColor="@color/black2D"
    android:gravity="center"
    app:stroke_color="#FF7547"
    app:stroke_width="@dimen/m0.5"
    android:layout_marginLeft="@dimen/m14"
    android:layout_marginRight="@dimen/m14"
    app:corner="@dimen/m20"
    android:layout_marginTop="@dimen/m13"/>


    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">



        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="我已阅读并同意《微忙用户协议》"
        android:textSize="@dimen/m12"
        android:textColor="@color/gray94"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/m25"/>


    </RelativeLayout>

</LinearLayout>